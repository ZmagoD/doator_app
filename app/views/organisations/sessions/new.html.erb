<div class="row">
  <div class="col-md-6 col-md-offset-3 well">
    <h2>Prijavni obrazec</h2>
    
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.input :email, autofocus: true, label: "Email" %>
        <%= f.input :password, autocomplete: "off", label: "Geslo" %>
      <% if devise_mapping.rememberable? -%>
          <%= f.label :remember_me, "Zapomi si!" %>
          <%= f.input_field :remember_me, as: :boolean %>
      <% end -%>
      <div class="form-group">
        <%= f.submit "Prijavi se", class: "btn btn-default btn-lg" %>
      </div>
    <% end %>
    
    <%= render "organisations/shared/links" %>
  </div>
</div>
